!!! 5

- cache_buster = "?_=#{Time.now.to_i}"

%html
  %head
    %meta{ :charset => "utf-8" }
    %meta{ :"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }
    %meta{ :"http-equiv" => "Content-Type", :content => "text/html" }
    %meta{ :name => "viewport", :content => "width=device-width" }
    %meta{ :name => "description", :content => "Turn any file on your computer into a branded download page hosted on Dropbox." }
    %meta{ :name => "bitly-verification", :content => "05ae9fe22b8e" }
    %title Servus for Mac. Your uploads, your style, on Dropbox.

    %script{ :src => "js/jquery.min.js#{cache_buster}" }
    %script{ :src => "js/top.js#{cache_buster}" }

    %link{ :rel => "publisher", :href => "https://plus.google.com/101996114152007191046" }
    %link{ :rel => "shortcut icon", :href => "img/favicon.png" }
    %link{ :rel => "stylesheet", :type => "text/css", :href => "//assets.servus.io/3/font-awesome.min.css" }
    /[if IE 7 ]
      %link{ :rel => "stylesheet", :type => "text/css", :href => "//assets.servus.io/3/font-awesome-ie7.min.css" }
    %link{ :rel => "stylesheet", :type => "text/css", :href => "css/foundation.min.css#{cache_buster}" }
    %link{ :rel => "stylesheet", :type => "text/css", :href => "css/gh-fork-ribbon.css#{cache_buster}" }
    /[if IE]
      %link{ :rel => "stylesheet", :type => "text/css", :href => "css/gh-fork-ribbon.ie.css#{cache_buster}" }
    %link{ :rel => "stylesheet", :type => "text/css", :href => "css/servus.css#{cache_buster}" }

  %body
    .fixed.contain-to-grid
      %nav.top-bar
        %ul
          %li.name
            %h1
              %a{ :href => "/" } Servus. For Mac & Dropbox.

        %section
          %ul.right
            %li
              %a.download{ :href => "/download" } Download Servus

            %li
              %a{ :href => "/faq.html" } FAQ

            %li
              %a{ :href => "http://blog.servus.io/" } Blog

            %li
              %a{ :href => "/twitter" }
                %i.icon-twitter
                Twitter

            %li
              %a{ :href => "/+" }
                %i.icon-google-plus-sign
                G+

            %li
              %a{ :href => "https://tinyletter.com/servusio" }
                %i.icon-envelope
                Newsletter


    = yield

    .github-fork-ribbon-wrapper.right
      .github-fork-ribbon
        %a{ :href => "http://blog.servus.io/post/38140138904/announcing-apocalyp-sale-2012" } APOCALYP-SALE 2012
